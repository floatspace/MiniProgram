.head-image {
  width: 100%;
  height: 380rpx;
}
.title{
  margin: 30rpx auto;
}
.author-date {
  padding: 20rpx;
}
.author-avatar {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.author-date text {
  display: inline-block;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: top;
}
.author-name {
  margin-left: 10rpx;
}
.date {
  margin-left: 20rpx;
}
.title {
  display: block;
  font-weight: bold;
  font-size: 40rpx;
  text-align: center;
}
.tools {
  text-align: right;
}
.tools image {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  border: solid 1px #707070;
  background-color: #fff;
}
.tools image:nth-last-of-type(1) {
  margin-right: 40rpx;
}
.horizental {
  display: block;
  position: relative;
  top: -40rpx;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  z-index: -99;
}
.content {
  padding: 30rpx;
}
.content-detail {
  letter-spacing: 4rpx;
  line-height: 24rpx;
}